generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Match {
  id              Int         @id @default(autoincrement())
  slateDate       String
  league          String
  commenceTimeUTC String
  homeTeam        String
  awayTeam        String
  oddsHome        Float
  oddsDraw        Float
  oddsAway        Float
  status          String      @default("scheduled")
  scoreHome       Int?
  scoreAway       Int?
  createdAt       DateTime    @default(now())
  
  bets            Bet[]
  ticketLegs      TicketLeg[]
}

model Bet {
  id        Int       @id @default(autoincrement())
  matchId   Int
  pick      String
  stake     Float
  oddsUsed  Float
  status    String    @default("open")
  payout    Float?
  placedAt  DateTime  @default(now())
  settledAt DateTime?
  match     Match     @relation(fields: [matchId], references: [id])
}

model Ticket {
  id        Int       @id @default(autoincrement())
  stake     Float
  totalOdds Float
  status    String    @default("open") // open|settled|void
  payout    Float?
  placedAt  DateTime  @default(now())
  settledAt DateTime?

  legs TicketLeg[]
}

model TicketLeg {
  id       Int    @id @default(autoincrement())
  ticketId Int
  matchId  Int
  pick     String // "1"|"X"|"2"
  oddsUsed Float

  // Resolution
  status    String    @default("open") // open|won|lost|push|void
  settledAt DateTime?

  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  match  Match  @relation(fields: [matchId], references: [id])

  @@unique([ticketId, matchId]) // one leg per match per ticket
}

model Bankroll {
  id        Int      @id @default(autoincrement())
  amount    Float    @default(1000)
  updatedAt DateTime @updatedAt
}
