generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Match {
  id              Int         @id @default(autoincrement())
  slateDate       String
  league          String
  commenceTimeUTC String
  homeTeam        String
  awayTeam        String
  oddsHome        Float
  oddsDraw        Float
  oddsAway        Float
  status          String      @default("scheduled")
  scoreHome       Int?
  scoreAway       Int?
  createdAt       DateTime    @default(now())
  ticketLegs      TicketLeg[]
}

model Ticket {
  id          Int       @id @default(autoincrement())

  stakeCents  Int
  payoutCents Int?

  totalOdds   Float
  status      String    @default("open") // open|settled|void
  placedAt    DateTime  @default(now())
  settledAt   DateTime?

  legs TicketLeg[]
}

model TicketLeg {
  id        Int    @id @default(autoincrement())
  ticketId  Int
  matchId   Int
  pick      String // "1"|"X"|"2"
  oddsUsed  Float

  status    String    @default("open") // open|won|lost|push|void
  settledAt DateTime?

  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  match  Match  @relation(fields: [matchId], references: [id])

  @@unique([ticketId, matchId])
}

model Bankroll {
  id          Int       @id @default(autoincrement())
  amountCents Int       @default(100000) // 1000.00
  updatedAt   DateTime  @updatedAt
}
